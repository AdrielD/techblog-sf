<div class="row">
	<% if logged_in? %>
		<div class="col-sm-6 pull-left">
			<p">Welcome, <%= get_user_name %></p>
		</div>
		<div class="col-sm-1 pull-right">
			<%= link_to "Logout", logout_path, class: "btn btn-danger" %>
		</div>
	<% else %>
		<div class="col pull-right">
				<%= form_tag('/sessions', method: :create, class: "form-inline") do %>
					<div class="form-group mx-sm-3 mb-2">
						<%= label_tag :email, "Email" %>
						<%= text_field_tag :email, "", class: "form-control form-control-sm" %>
					</div>
					<div class="form-group mx-sm-3 mb-2">
						<%= label_tag :password, "Password" %>
						<%= text_field_tag :password, "", class: "form-control form-control-sm" %>
					</div>
			    <%= submit_tag "Login", class: "btn btn-primary mb-2" %>
				<% end %>
		</div>
	<% end %>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>TechBlog 2.0</h1>
	</div>
</div>
<hr>