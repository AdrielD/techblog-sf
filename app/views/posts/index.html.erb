<div class="row">
	<% if logged_in? %>
		<div class="pull-right col-sm-2">
			<%= link_to "New Post", new_post_path, class: "btn btn-success" %>
		</div>
	<% end %>
	<% @posts.each do |post| %>
		<h2 class="col-md-8 col-md-offset-1"><a href="<%= post_path(post) %>"><%= post.title %></a></h2>
	<% end %>
</div>
