<div class="row" style="padding-top: 10px;">
	<% if logged_in? %>
		<div class="pull-right">
			<%= link_to "New Post", new_post_path, class: "btn btn-success" %>
		</div>
	<% end %>
  <% @posts.each do |post| %>
    <div class="row left-buffer bottom-buffer" style="width: 90%">
      <div class="col-md-12 left-buffer highlight" style="text-align: center;">
  		  <h2 class="title"><a href="<%= post_path(post) %>"><%= post.title %></a></h2>
        <small><i>Created at:</i> <%= post.created_at.to_s[0..10] %></small>
        <small><i>By:</i> <%= post.user.name %></small>
      </div>
    </div>
  <% end %>
</div>
